@using bitScry.Models.Projects.Weather;
@using MetOfficeDataPoint.Models;
@using bitScry.AppCode.Projects;

@model WeatherSummary

<div class="col-3 weather-daily img-thumbnail btn btn-outline-dark" role="button" id="summary_@Model.ForecastDay.ToString("yyyyMMdd")">
    <div class="row">
        <div class="col">
            @Model.ForecastDay.ToString("ddd")
        </div>
    </div>
    <div class="row">
        <div class="col">
            <i class="wi @Model.Icon.Icon wi-fw"></i>
        </div>
        <div class="col weather-daily-temperature">
            <div class="row">
                <div class="col">
                    @Model.MaxTemperature &deg;C
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Model.MinTemperature &deg;C
                </div>
            </div>
        </div>
    </div>
</div>